<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="6dip" android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:orientation="vertical">
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="wrap_content" android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout04"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="vertical">
			<ImageView android:id="@+id/icon" android:layout_margin="5dip"
				android:layout_height="40dip" android:layout_width="40dip"
				android:layout_gravity="center_horizontal" />
			<TextView android:id="@+id/service_name"
				android:layout_height="wrap_content" android:text="Wasatter"
				android:textSize="12dip" android:layout_width="fill_parent" android:gravity="center"/>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_marginLeft="5dip"
			android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:gravity="center_vertical" android:id="@+id/screen_name"
					android:layout_height="wrap_content" android:text="Handle Name"
					android:layout_width="wrap_content" android:textStyle="bold"
					android:layout_weight="1" android:ellipsize="end"/>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/reply_name"
					android:layout_height="wrap_content" android:text="&gt;reply_name"
					android:layout_width="wrap_content" android:layout_weight="1" android:ellipsize="end"></TextView>
			</LinearLayout>
			<TextView android:layout_width="fill_parent" android:id="@+id/status"
				android:marqueeRepeatLimit="marquee_forever" android:ellipsize="marquee"
				android:gravity="center_vertical" android:layout_height="wrap_content"
				android:text="body" />
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/layout_information">
		
		
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/post_date" android:text="10/01/01 00:00:00" android:textSize="10dip"></TextView></LinearLayout></LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/layout_favorite" android:padding="2dip">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/text_favorite"
			android:paddingRight="5dip" android:text="イイネ!:"></TextView>
		<LinearLayout android:id="@+id/layout_favorite_images"
			android:layout_gravity="center_vertical" android:layout_margin="1dip"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="fill_parent">
		</LinearLayout>
	</LinearLayout>
	
</LinearLayout>  