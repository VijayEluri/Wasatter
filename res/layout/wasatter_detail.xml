  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">


<ScrollView android:id="@+id/ScrollView01" android:layout_height="fill_parent" android:layout_width="fill_parent"><LinearLayout android:id="@+id/LinearLayout02" android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent"><TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip" android:layout_height="wrap_content"><TableRow android:id="@+id/TableRow01" android:layout_height="wrap_content" android:layout_width="fill_parent"><ImageView android:id="@+id/icon" android:layout_height="60dip" android:layout_width="60dip"></ImageView><LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1" android:orientation="vertical"><TextView android:text="ScreenName" android:id="@+id/screen_name" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="5dip" android:layout_marginTop="5dip"></TextView>
<TextView android:id="@+id/service_name" android:text="ServiceName" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="5dip" android:layout_marginTop="5dip"></TextView></LinearLayout>
</TableRow>
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dip" android:layout_marginTop="5dip" android:id="@+id/layout_reply" android:orientation="vertical"><TextView android:layout_height="wrap_content" android:visibility="visible" android:id="@+id/reply_text" android:layout_width="fill_parent"></TextView><TextView android:layout_height="wrap_content" android:id="@+id/reply_user_name" android:layout_width="fill_parent" android:gravity="right|center_vertical" android:autoLink="web|email"></TextView>
</LinearLayout><TextView android:layout_width="fill_parent" android:id="@+id/status" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip" android:layout_height="wrap_content" android:autoLink="web|email"></TextView><TextView android:layout_width="fill_parent" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginTop="5dip" android:layout_height="wrap_content" android:id="@+id/text_result"></TextView>





<LinearLayout android:id="@+id/LinearLayout03" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Permalink : "></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="http://www.example.com/" android:autoLink="web" android:id="@+id/permaLink"></TextView>
</LinearLayout>
</TableLayout><TableLayout android:id="@+id/TableLayout02" android:layout_width="fill_parent" android:layout_margin="5dip" android:gravity="bottom" android:layout_height="fill_parent"><TableRow android:id="@+id/TableRow02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal" android:layout_gravity="bottom"><Button android:layout_height="wrap_content" android:text="イイネ！/Favorite" android:layout_weight="1" android:layout_width="400dip" android:id="@+id/button_favorite"></Button><Button android:layout_height="wrap_content" android:id="@+id/reply_button" android:text="Reply" android:layout_weight="1" android:layout_width="400dip"></Button></TableRow></TableLayout></LinearLayout>
</ScrollView>


</LinearLayout>
