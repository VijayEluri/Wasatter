<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<LinearLayout android:layout_weight="1"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/LinearLayout01">
		<TextView android:layout_width="fill_parent"
			android:paddingLeft="5dip" android:paddingTop="10dip"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:id="@+id/TextView01" android:paddingBottom="10dip"
			android:text="@string/setup_wizard_main_title"></TextView>
		<TextView android:layout_width="fill_parent"
			android:paddingLeft="5dip" android:layout_height="wrap_content"
			android:textSize="16sp" android:id="@+id/wizardText"
			android:paddingBottom="10dip" android:paddingRight="5dip"
			android:text="@string/setup_wizard_main_text"></TextView>
		<LinearLayout android:layout_height="wrap_content"
			android:id="@+id/LinearLayout03" android:orientation="vertical"
			android:layout_width="fill_parent">
			<EditText android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip" android:layout_width="fill_parent"
				android:inputType="text" android:hint="@string/setup_wizard_hint_wassr_id"
				android:layout_height="wrap_content" android:layout_marginRight="10dip"
				android:layout_marginTop="5dip" android:id="@+id/wassrId"></EditText>
			<EditText android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip" android:layout_width="fill_parent"
				android:inputType="text" android:layout_height="wrap_content"
				android:layout_marginRight="10dip" android:layout_marginTop="5dip"
				android:id="@+id/wassrPass" android:hint="@string/setup_wizard_hint_wassr_pass"></EditText>
		</LinearLayout>
		<Button android:layout_marginBottom="5dip" android:id="@+id/gotoButton"
			android:layout_marginLeft="10dip" android:layout_width="fill_parent"
			android:text="GotoButton" android:layout_height="wrap_content"
			android:layout_marginRight="10dip" android:layout_marginTop="5dip"></Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="wrap_content" android:layout_gravity="bottom"
		android:layout_width="fill_parent">
		<Button android:id="@+id/prevButton" android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_width="fill_parent"
			android:text="@string/setup_wizard_button_prev"></Button>
		<Button android:text="@string/setup_wizard_button_next"
			android:layout_height="wrap_content" android:id="@+id/nextButton"
			android:layout_weight="1" android:layout_width="fill_parent"></Button>
	</LinearLayout>
</LinearLayout>
