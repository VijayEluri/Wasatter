<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.senchan.android.wasatter"
    android:versionCode="13"
    android:versionName="2.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:label="@string/app_name"
        android:name=".Wasatter"
        android:icon="@drawable/ic_launcher" android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
        <activity
            android:configChanges="orientation"
            android:name=".ActivityMain" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".app.TimelineActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="New post"
            android:name=".app.Update" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Setting"
            android:name=".app.Setting" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Status"
            android:name=".app.Detail" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Get OAuth token"
            android:name=".app.OAuthToken" >
        </activity>
        <activity android:name=".next.ui.activity.AccountListActivity"></activity>
        <activity android:name=".next.ui.activity.ConfigHomeActivity"></activity>
        <activity android:name=".next.ui.activity.DebugMenuActivity"></activity>
        <activity android:name=".app.HomeActivity"></activity>
        <activity android:name=".app.AddAccountActivity"></activity>
        <activity android:name=".app.UpdateStatusActivity"></activity>
        <activity android:name=".app.ConfigActivity"></activity>
        <activity android:name=".app.debug.ConfigActivity"></activity>
        </application>

</manifest>