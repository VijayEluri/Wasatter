<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.senchan.android.wasatter"
    android:versionCode="12"
    android:versionName="1.1.0a" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/wasattericon"
        android:label="@string/app_name"
        android:name="Wasatter"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity
            android:configChanges="orientation"
            android:name=".ActivityMain" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:name=".ui.TimelineActivity" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="New post"
            android:name=".ui.Update" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Setting"
            android:name=".ui.Setting" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Status"
            android:name=".ui.Detail" >
        </activity>
        <activity
            android:configChanges="orientation"
            android:label="Get OAuth token"
            android:name=".ui.OAuthToken" >
        </activity>
        <activity android:name=".ui.oauth.twitter.OAuthCallback" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback.twitter"
                    android:scheme="wasatter" />
            </intent-filter>
        </activity>
    </application>

</manifest>