<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="10dp" >
    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Profile icon for this user"
        android:src="@drawable/ic_default_user_icon" />
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewIcon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:text="NameNameName"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/textViewNameEn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignRight="@+id/textViewName"
        android:layout_below="@+id/textViewName"
        android:text="nameennameennameennameen"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/textViewLastMessagedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewName"
        android:layout_below="@+id/imageViewIcon"
        android:gravity="right"
        android:text="2012/01/01 00:00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>